<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="#e0e0de"
       tools:context=".MainActivity">

        <ImageView
           android:id="@+id/imageView"
           android:layout_width="match_parent"
           android:layout_height="32dp"
           android:layout_gravity="center"
           android:background="#bf7326"
           android:foreground="#bf7326"
           app:srcCompat="@android:drawable/bottom_bar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="220dp"
        android:layout_height="107dp"
        android:layout_gravity="center"
        android:translationY="-30dp"
        app:srcCompat="@drawable/tf2" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Team Fortress 2 - игра по лору которой два брата блухарт и рэдмант не поделивши территорию своего покойного отца нанимают наемников за котороых нам и предстоит одолеть противоположную команду"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:translationY="-60dp" />

        <TextView
        android:id="@+id/textView2"
        android:layout_width="185dp"
        android:layout_height="137dp"
        android:layout_gravity="start"
        android:text="На выбор эта игра предоставляет 9 наемников с разными особенностями и стилем игры о которых здесь и будет написано"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:translationY="-60dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="226dp"
            android:layout_height="166dp"
            android:layout_gravity="end"
            android:translationY="-200dp"
            app:srcCompat="@drawable/tfclasses" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Классы делятся на 3 группы (Атака,Защита, поддержка) в каждой группе по 3 класса но на игру это особо не влияет ведь некоторые классы хороши не только в своей группе но и в других случаях"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:translationY="-190dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="211dp"
            android:layout_gravity="end"
            android:translationY="-200dp"
            app:srcCompat="@drawable/scout" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Первый на очереди разведчик (scout) - один из атакующих классов имеющий самое малое количество хп(125) в игре что дает взамен высокую скорость и двойной прыжок, из снаряжения разведчик имеет обрез, пистолет (но можно заменить на колу или"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:translationY="-380dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="молоко которые при выпивание или кидании дает определенные баффы или дебаффы) а также бита."
            android:textColor="@color/black"
            android:textSize="16dp"
            android:translationY="-380dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="150dp"
            android:layout_height="211dp"
            android:translationY="-390dp"
            app:srcCompat="@drawable/soldier" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="260dp"
            android:layout_height="190dp"
            android:layout_gravity="start"
            android:text="Второй солдат(soldier) - второй атакающий класс с 200 хп и имеет такое снаряжение как ракетометом с помощью которого он может подбрасывать себя в воздух, дробовик (можно заменить знамена которые дают баффы солдату и его союзникам либо ботинки понижающие урон от падения) а также лопата."
            android:textColor="@color/black"
            android:textSize="16dp"
            android:translationX="150dp"
            android:translationY="-575dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="150dp"
            android:layout_height="211dp"
            android:layout_gravity="end"
            android:translationY="-580dp"
            app:srcCompat="@drawable/pyro" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="И последний класс группы атаки - поджигатель(pyro) имеет средний запас хп(175), а в арсенале огнемет которым может на mouse2 отталкивать людей и летящие снаряды, дробовик (можно заменить на ракетницу которая поджигает выстрелом) и топор"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:translationY="-760dp" />
    </LinearLayout>
</ScrollView>